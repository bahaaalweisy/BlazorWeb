@model List<BlazorWeb.Models.GetAllContactModel>
@{
    int counter = 1;
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/jquery.datatables.min.css" rel="stylesheet" />
<link href="~/css/modalstyle.css" rel="stylesheet" />
<link href="~/css/contact.css" rel="stylesheet" />
<link href="~/css/modalcustom.css" rel="stylesheet" />

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <div class="col-md-6">
                <h4 class="card-title">Contacts</h4>
            </div>
            <div class="col-md-6">
                <a class="btn btn-primary btn-sm" id="myBtn5" onclick="PopupFormAdd1('/Contacts/Create/')"> Add Contact </a>
            </div>
            <div id="dialog-confirm1">Are you Sure ?</div>
            <div id="modal-container1"></div>
            <div id="modal-containerAdd1"></div>
        </div>
    </div>
</div>
<div class="card-body">
    <div class="table-responsive">
        <table id="Contactlist" class="table header-border table-responsive-sm">
            <thead>
                <tr>
                    <th>#</th>
                    <th>First Name  </th>
                    <th>Last Name</th>
                    <th>
                        Email
                    </th>
                    <th>
                        Phone Number
                    </th>
                 
                    <th>
                       Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr role="row" class="odd">
                                <td>@counter</td>
                                <td>@item.FirstName</td>
                                <td>@item.LastName</td>
                                <td>@item.Email</td>
                                <td>@item.PhoneNumber</td>
                            
                               
                                <td>
                                  
                                            <a class="btn btn-primary" onclick="PopupEdit1('@item.Id');">
                                                Edit
                                            </a>                                    
                                     
                                            <a class="btn btn-danger" onclick="DeleteDialog1('@item.Id');">
                                                Delete
                                            </a>
                                  
                                </td>
                            </tr>
                            counter++;
                        }
                    }
                    else
                    {
                        <tr role="row" class="odd">
                            <td colspan="5">There are no data</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<script src="~/controllersscripts/datatables/sweetalert2@11.js"></script>
<link href="~/controllersscripts/datatables/jquery-ui.css" rel="stylesheet" />
<script src="~/controllersscripts/datatables/jquery-ui.js"></script>
<!-- Include jQuery -->
<script src="~/controllersscripts/datatables/jquery-3.5.1.min.js"></script>
<!-- Include DataTables script -->
<script src="~/controllersscripts/datatables/jquery-ui.js"></script>
<script src="~/controllersscripts/contacts.js"></script>
<script src="~/controllersscripts/validation.js"></script>







